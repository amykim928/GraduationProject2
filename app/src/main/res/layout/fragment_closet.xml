<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/addTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/inter_600"
        android:text="RUMOS"
        android:textColor="@color/purple_500"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/titleLine"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="75dp"
        android:layout_marginBottom="170dp"
        android:background="#D4D2D9"
        app:layout_constraintBottom_toTopOf="@+id/closetTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/closetTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginTop="71dp"
        android:fontFamily="@font/inter_600"
        android:text="사용자의 옷장"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@+id/closetResultView"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/closetResultView"
        android:layout_width="365dp"
        android:layout_height="627dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/emptyClosetResultView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/closetTitle" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/emptyClosetResultView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="16dp"
        android:textColor="#333333"
        android:textStyle="bold"
        android:text="옷장에 저장된 옷이 존재하지 않습니다 \n 옷을 추가해주세요" />


</androidx.constraintlayout.widget.ConstraintLayout>
