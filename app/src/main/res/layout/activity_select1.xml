<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:id="@+id/addTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RUMOS"
        android:textColor="@color/purple_500"
        android:textSize="24dp"
        android:fontFamily="@font/inter_600"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <View
        android:id="@+id/titleLine"
        android:background="#D4D2D9"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/addTitle"/>


    <LinearLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/titleLine"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="30dp">

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘의 날씨"
            android:textSize="24dp"
            android:textColor="@color/purple_500"
            android:textStyle="bold"
           android:layout_gravity="center"/>
        <ImageButton
            android:id="@+id/btnRefresh"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="#00000000"
            android:src="@drawable/refresh"
            android:scaleType="fitXY"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/weatherLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_weather_background"
        app:layout_constraintTop_toBottomOf="@id/titleLayout"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp"
        android:paddingHorizontal="20dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/curDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mm/dd"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_600"
            app:layout_constraintTop_toBottomOf="@id/titleLine"
            android:layout_marginVertical="30dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/curWeather"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/sun"/>
            <TextView
                android:id="@+id/curTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기온"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:gravity="right">
                <TextView
                    android:id="@+id/curSky"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="기온"
                    android:textSize="16dp"
                    android:textColor="@color/black"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_marginTop="5dp">
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/humidity"/>
                    <TextView
                        android:id="@+id/curHumidity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/weatherRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginVertical="30dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

        <View
            android:id="@+id/subLine"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="2px"/>

        <TextView
            android:id="@+id/selectClothTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="현재 날씨에 어울리는 옷"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:fontFamily="@font/inter_600"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/selectClothDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            android:textSize="16dp"
            android:fontFamily="@font/inter_400"
            android:layout_marginBottom="30dp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>